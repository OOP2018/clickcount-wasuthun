<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<HBox alignment="CENTER" maxWidth="1.7976931348623157E308" spacing="15.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="counter.ClickController">
   <children>
      <Button fx:id="button" alignment="CENTER" contentDisplay="CENTER" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#plusButtonHandler" text="+" textAlignment="CENTER" textFill="#3f0edd" HBox.hgrow="SOMETIMES">
         <font>
            <Font name="Monospaced Regular" size="50.0" />
         </font>
      </Button>
      <Button fx:id="minusbutton" layoutX="20.0" layoutY="20.0" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#minusButtonHandler" text="-" textAlignment="CENTER" textFill="#3f0edd" HBox.hgrow="SOMETIMES">
         <font>
            <Font name="Courier New Bold" size="50.0" />
         </font>
      </Button>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
</HBox>
